<span class="page page-item <%= ' current' if page.current? %>">
   <% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: ' page-link link-secondary' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link link-secondary' %>
  </li>
<% end %>
  </span>