<div class="row m-0">
  <div class="col-2 p-0">
    <%= render partial: 'pages/sidebar' %>
  </div>
  <div class="col-10 p-0 mt-4">
    <nav class="navbar bg-transparent">
      <div class="container-fluid justify-content-end me-4">
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
      </div>
    </nav>
    <% @products.each_slice(3) do |products| %>
      <div class="row m-0">
        <% products.each do |product| %>
          <div class="card m-5" style="width: 413px;">
            <div class="card-body">
              <h5 data-bs-toggle="tooltip" title="<%= product.title %>" class="card-title"><%= link_to product.title, product, class: "link-secondary" %></h5>
              <p class="card-text"><%= product.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
