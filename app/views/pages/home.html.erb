<div class="row m-0">
  <div class="col-2 p-0">
    <%= render partial: 'pages/sidebar' %>
  </div>
  <div class="col-10 p-0 mt-4">
    <nav class="navbar bg-transparent">
      <div class="container-fluid justify-content-end p-0">
        Choose your coffee for your everyday!
      </div>
    </nav>
    <% @products.each_slice(3) do |products| %>
      <div class="row m-0 d-flex justify-content-between">
        <% products.each do |product| %>
          <div class="card mt-4 ms-4 p-0" style="width: 300px;">
            <%= image_tag('https://picsum.photos/id/766/300/') %>
            <div class="card-body">
              <h5 data-bs-toggle="tooltip" title="<%= product.title %>" class="card-title"><%= link_to product.title, product, class: "link-secondary" %></h5>
              <p class="card-text">Flavours: <i><%= product.description %></i></p>
              <p class="card-text"><%= number_to_currency(product.price.round, unit: "UAH", format: "%n %u") %> per
                100g.</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= paginate @products %>
  </div>
</div>
