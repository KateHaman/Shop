<div class="text-center mb-2">
  <h2 class="mt-3">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, 'data-turbo': false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control-sm' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <br/><i>(leave blank if you don't want to change it)</i><br/>
      <%= f.password_field :password, autocomplete: "edit-password", class: 'form-control-sm' %>
      <% if @minimum_password_length %>
        <br/>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "edit-password", class: 'form-control-sm' %>
    </div>

    <div class="field">
      <%= f.label :current_password %><br/><i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control-sm' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-dark mt-2 mb-2' %>
    </div>
  <% end %>

  <p>Click here in case you'd like to delete your coffee-lover account<%= button_to "Destroy", registration_path(resource_name), method: :delete, data: {turbo: "false" }, class: 'btn btn-dark' %></p>

  <%= link_to "Back", :back, class: 'link-secondary'%>
</div>
