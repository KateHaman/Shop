<%= form_for @comment do |f| %>
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |message| %>
      <h4 class="alert-danger"><%= message %></h4>
    <% end %>
  <% end %>
  <div class="d-flex align-items-center">
    <%== f.text_area :body, placeholder: 'Add your comment here..', class: 'form-control p-2 mb-3', rows: 1 %>
  </div>
  <div class="mb-3">
    <%= f.select :rating, [*1..5], prompt: 'Select Coffee Rate' %>
  </div>
  <%= f.hidden_field :product_id, value:@product.id %>
  <div><%= f.submit 'Rate Coffee', class: 'btn btn-secondary' %></div>
<% end %>
